{
    "name": "toolkip",
    "version": "1.0.1",
    "description": "toolkip library",
    "license": "MIT",
    "author": "Kip Price",
    "test": "jest",
    "main": "src/index.ts",
    "module": "src/index.ts",
    "types": "typings/index",
    "scripts": {
        "build": "yarn build:tsc && yarn build:webpack",
        "build:webpack": "webpack",
        "build:tsc": "tsc -p tsconfig.json --emitDeclarationOnly",
        "watch": "yarn watch:webpack && yarn watch:tsc",
        "watch:webpack": "webpack -w",
        "watch:tsc": "tsc -p tsconfig.json --emitDeclarationOnly -w",
        "test": "jest -- -t .test.ts",
        "bootstrap": "lerna bootstrap",
        "publish": "lerna publish",
        "compile": "lerna run compile",
        "test-lerna": "lerna run test"
    },
    "devDependencies": {
        "@types/jest": "^24.9.0",
        "jest": "^25.1.0",
        "jest-cli": "^24.9.0",
        "lerna": "^3.20.2",
        "terser-webpack-plugin": "^2.3.4",
        "ts-jest": "^24.3.0",
        "ts-loader": "^6.2.1",
        "typescript": "^3.8.3",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10"
    }
}
