{ 
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es2015",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "removeComments": true
    },
    "exclude": [
        "node_modules", 
        "compiled_js", 
        "typings", 
        "packages/**/_(wip)_*",
        "packages/**/_(old)_*",
        "modules", 
        "typescript/modules"
    ]
}
